@page "/contact-center"

<MudGrid Style="background-color:#002b45;" Justify="Justify.Center">
	<MudItem xs="10">
		<MudText Style="color:#ffffff; font-family: 'Abel';font-weight: 400;font-size: 18px;"><MudImage Src="Images/icon-contact.png" Fluid="true" />&nbsp;&nbsp;&nbsp; CONTACT CENTER</MudText>
