<MudGrid Class="mt-3" Justify="Justify.Center">
	<MudImage Src="Images/CallCenter.jpg" Fluid="true" />
</MudGrid>

<MudGrid Class="mt-10" Justify="Justify.Center">
	<MudItem xs="10">
